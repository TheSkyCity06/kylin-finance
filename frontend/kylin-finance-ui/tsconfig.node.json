{
  "extends": "@vue/tsconfig/tsconfig.json", 
  // 或者尝试直接使用基础路径
  // "extends": "@tsconfig/node20/tsconfig.json", 
  "include": [
    "vite.config.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "eslint.config.js"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}